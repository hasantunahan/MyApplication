<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:layout_margin="10dp"
    app:cardCornerRadius="6dp"
    app:cardElevation="4dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/food_image"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toTopOf="@+id/constraintLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <android.support.constraint.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:padding="5dp"
            android:weightSum="10"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/food_name"
                android:layout_width="263dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"

                android:layout_weight="9"
                android:background="#fff"
                android:fontFamily="@font/kim"
                android:padding="6dp"
                android:text="Makaron Ismi"
                android:textColor="#84B150"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/priceFoodList"
                android:layout_width="263dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/kim"
                android:padding="6dp"
                android:text="Price"
                android:textColor="#404040"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/food_name"
                app:layout_constraintStart_toStartOf="@+id/food_name"
                app:layout_constraintTop_toBottomOf="@+id/food_name" />

            <LinearLayout
                android:id="@+id/linearLayout4"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/food_name"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

                <ImageView
                    android:id="@+id/yorumlarImage"
                    android:layout_width="wrap_content"
                    android:layout_height="29dp"
                    android:layout_weight="1"
                    android:padding="3dp"
                    android:tint="#404040"
                    app:srcCompat="@drawable/ic_message_black_24dp"
                    tools:layout_editor_absoluteX="358dp"
                    tools:layout_editor_absoluteY="34dp" />

                <TextView
                    android:id="@+id/yorumSayisiTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="(0 yorum)"
                    android:textSize="12sp" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/food_name"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/fav"
                    android:layout_width="29dp"
                    android:layout_height="29dp"
                    android:layout_weight="1"
                    android:background="#fff"
                    android:padding="3dp"
                    android:tint="#404040"
                    app:srcCompat="@drawable/ic_favorite_border_black_24dp"
                    tools:layout_editor_absoluteX="303dp"
                    tools:layout_editor_absoluteY="52dp" />
                <ImageView
                    android:id="@+id/shareFoodlist"
                    android:layout_width="28dp"
                    android:layout_height="29dp"
                    android:layout_weight="1"
                    android:background="#fff"
                    android:padding="3dp"
                    android:tint="#404040"
                    app:srcCompat="@drawable/ic_menu_share"
                    tools:layout_editor_absoluteX="281dp"
                    tools:layout_editor_absoluteY="73dp" />

                <ImageView
                    android:id="@+id/sepeteEkleView"
                    android:layout_width="29dp"
                    android:layout_height="29dp"
                    android:layout_weight="1"
                    android:padding="3dp"
                    android:tint="#404040"
                    app:srcCompat="@drawable/ic_sepeteklesayacli"
                    tools:layout_editor_absoluteX="347dp"
                    tools:layout_editor_absoluteY="79dp" />



            </LinearLayout>


        </android.support.constraint.ConstraintLayout>

        <ImageView
            android:id="@+id/kalitekontrol"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:clickable="true"
            android:tint="#FFF55C63"
            android:visibility="visible"
            app:backgroundTint="@android:color/white"
            app:layout_constraintBottom_toTopOf="@+id/food_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/ic_favorite_black_24dp" />


    </android.support.constraint.ConstraintLayout>


</android.support.v7.widget.CardView>